@model List<ResultBrandDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araba Markaları Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Araba Markaları Bu Sayfadan Yönetilebilir <code class="highlighter-rouge"></code>.
                        </p>
                        <div class="table-responsive">
                            <table class="table table-dark mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Özellik</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                      
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.name</td>
                                            <td><a href="/AdminBrand/RemoveBrand/@item.BrandID" class=" btn btn-outline-danger">Sil</a>  </td>
                                            <td><a href="/AdminBrand/UpdateBrand/@item.BrandID" class=" btn btn-outline-success">Güncelle</a>  </td>
                                          

                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <hr />
                            <a href="/AdminBrand/CreateBrand/" class=" btn btn-outline-primary">Marka Ekle</a>
                        </div>
                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->
        </div>
        <!-- end page title -->

    </div>
</div>




