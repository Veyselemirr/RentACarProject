@model List<ResultBannerDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
 
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Ana Sayfa Banner</h4>
                        <p class="card-subtitle mb-4">
                            Ana Sayfanın Banner Alanı Yönetilebilir <code class="highlighter-rouge"></code>.
                        </p>
                        <div class="table-responsive">
                            <table class="table table-dark mb-0">
                                <thead>
                                    <tr>
                                        <th>Başlık</th>
                                        <th>Açıklama</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Title</td>
                                            <td>@item.Description</td>
                                  
                                            <td><a href="/Admin/AdminBanner/RemoveBanner/@item.BannerID" class=" btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminBanner/UpdateBanner/@item.BannerID" class=" btn btn-outline-success">Güncelle</a></td>
 
                                        </tr>                                    }
                                </tbody>
                            </table>
                            <hr />
                            <a href="/Admin/AdminBanner/CreateBanner/" class=" btn btn-outline-primary">Yeni Banner Girişi</a>
                        </div>
                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->
        </div>
        <!-- end page title -->

    </div>
</div>






