@model CreateBannerDto

@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Banner Ekleme Sayfası</h4>
                                <form method="post">
                                    <div class="form-group">
                                        <label for="exampleInputTitle">Başlık</label>
                                        <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Banner Başlığı Giriniz">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputDescription">Açıklama</label>
                                        <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Banner Açıklaması Giriniz">
                                    </div>

                                    <button type="submit" class="btn btn-primary waves-effect waves-light">Banner Bilgisi Ekle</button>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>














