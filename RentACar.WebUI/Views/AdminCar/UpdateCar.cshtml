@model UpdateCarDto

@{
    ViewData["Title"] = "UpdateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Araba Güncelleme Sayfası</h4>
                                <form method="post">
                                    <input type="hidden" asp-for="CarId" />
                                    <div class="form-group">
                                        <label for="exampleInputBrand">Marka</label>
                                        @Html.DropDownListFor(x => x.BrandID, (List<SelectListItem>)ViewBag.BrandValues, new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputModel">Model</label>
                                        <input type="text" class="form-control" id="exampleInputModel" asp-for="Model" placeholder="Model">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputCoverImage">Fotoğraf</label>
                                        <input type="text" class="form-control" id="exampleInputCoverImage" asp-for="CoverImageUrl" placeholder="Fotoğraf">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputKm">KM</label>
                                        <input type="text" class="form-control" id="exampleInputKm" asp-for="Km" placeholder="KM Bilgisi Giriniz">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputTransmission">Vites Türü</label>
                                        <input type="text" class="form-control" id="exampleInputTransmission" asp-for="Transmission" placeholder="Vites Türünü Giriniz">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputSeat">Koltuk Sayısı</label>
                                        <input type="number" class="form-control" id="exampleInputSeat" asp-for="Seat" placeholder="Koltuk Sayısı Seçiniz">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputLuggage">Bagaj Sayısı</label>
                                        <input type="number" class="form-control" id="exampleInputLuggage" asp-for="Luggage" placeholder="Bagaj Sayısı Seçiniz">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputFuel">Yakıt Türü</label>
                                        <input type="text" class="form-control" id="exampleInputFuel" asp-for="Fuel" placeholder="Yakıt Türü Giriniz">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputBigImage">Büyük Kapak Fotoğrafı</label>
                                        <input type="text" class="form-control" id="exampleInputBigImage" asp-for="BigImageUrl" placeholder="Araç Fotoğrafında görünecek kapak fotoğrafı linkini giriniz">
                                    </div>

                                    <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Kaydet</button>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>













